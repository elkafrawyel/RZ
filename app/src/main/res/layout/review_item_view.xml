<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fields_bg"
    android:layout_margin="8dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:id="@+id/avatarImgv"
        android:src="@drawable/image_user_default"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameTv"
        android:textStyle="bold"
        android:text="Mahmoud"
        app:layout_constraintStart_toEndOf="@id/avatarImgv"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/avatarImgv"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reviewTv"
        android:text="Mahmoud"
        app:layout_constraintStart_toEndOf="@id/avatarImgv"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/nameTv"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="9/1/2019"
        android:padding="8dp"
        android:textSize="16sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>